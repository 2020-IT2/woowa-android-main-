                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="40dp"
                                                android:text="843 likes"
                                                android:textSize="7dp">
                                            </TextView>
                                        </LinearLayout>
                                    </LinearLayout>

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="2dp"
                                                android:layout_marginRight="2dp"
                                                android:gravity="right"
                                                android:src="@drawable/ic_heart">
                                            </ImageView>
                                            <TextView
